{
    "name": "thedesk",
    "version": "24.0.12",
    "codename": "Anastasia",
    "description": "TheDesk is a Mastodon client for PC.",
    "repository": "https://github.com/cutls/TheDesk",
    "main": "dist/main/main.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "postinstall": "run-s util:*",
        "util:hash": "node gitHash.js",
        "construct": "node view/make/makeCli.js",
        "construct:store": "node view/make/makeCli.js --store",
        "dev": "run-p dev:*",
        "dev:run": "npm run build:main && electron ./ --dev",
        "dev:watchview": "node view/make/makeCli.js --watch",
        "dev:watchbuilder": "rollup -c -w",
        "build": "npm run build:prepare && node buildCli.js",
        "build:pack": "npm run build:prepare && node buildCli.js",
        "build:prepare": "node view/make/makeCli.js && npm run build:render && npm run build:main",
        "build:main": "tsc main/main.ts --outDir dist/main --esModuleInterop true",
        "build:render": "rollup -c",
        "build:pwa": "node view/make/makeCli.js && npm run build:render && node view/make/makeCli.js --pwa",
        "build:all:x64": "npm run build:prepare && node buildCli.js --withStore",
        "build:all": "npm run build:prepare && node buildCli.js --withStore --withX64 --withIa32 --withArm64",
        "lint:fix": "eslint --fix './js/**/*.ts' && prettier --write './js/**/*.ts'",
        "lint": "eslint './js/**/*.ts' && prettier --write './js/**/*.ts'"
    },
    "keywords": [
        "mastodon",
        "client",
        "electron",
        "thedesk"
    ],
    "bugs": {
        "url": "https://github.com/cutls/TheDesk/issues",
        "email": "p@cutls.com"
    },
    "homepage": "https://thedesk.top",
